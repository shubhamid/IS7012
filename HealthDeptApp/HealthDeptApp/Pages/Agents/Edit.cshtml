@page
@model HealthDeptApp.Pages.Agents.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Agent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Agent.Id" />
            <div class="form-group">
                <label asp-for="Agent.FirstName" class="control-label"></label>
                <input asp-for="Agent.FirstName" class="form-control" />
                <span asp-validation-for="Agent.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agent.LastName" class="control-label"></label>
                <input asp-for="Agent.LastName" class="form-control" />
                <span asp-validation-for="Agent.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agent.HireDate" class="control-label"></label>
                <input asp-for="Agent.HireDate" class="form-control" />
                <span asp-validation-for="Agent.HireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agent.SeparationDate" class="control-label"></label>
                <input asp-for="Agent.SeparationDate" class="form-control" />
                <span asp-validation-for="Agent.SeparationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Agent.OnLongTermLeave" /> @Html.DisplayNameFor(model => model.Agent.OnLongTermLeave)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
