@page
@model ResumeBook.Pages.Educations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Education Directory</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Education[0].School)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Education[0].Degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Education[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Education[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Education[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Education[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Education[0].Candidate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Education) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.School)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Candidate.FirstName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
