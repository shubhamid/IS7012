@page
@model ResumeBook.Pages.StudentContactDetailsModel
@{
}
<h1>Contact Details</h1>>
<h6>Get the email address and phone number of all the Candidates here</h6>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Candidate[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Candidate[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Candidate[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Candidate[0].PhoneNumber)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Candidate)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                </tr>
            }
        </tbody>
    </table>